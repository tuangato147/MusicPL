<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng phía sau -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape>
            <solid android:color="#80000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Lớp chính -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <gradient
                android:startColor="#CC99CC"
                android:endColor="#6699CC"
                android:angle="45" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>